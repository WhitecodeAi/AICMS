# Application Configuration
PORT=3000
NODE_ENV=production
JWT_SECRET=your-super-secret-jwt-key-here

# Tenant Configuration
TENANT_CONFIG_PATH=./config/tenants
TENANT_CACHE_TTL=300000

# Encryption Key for sensitive config data
CONFIG_ENCRYPTION_KEY=your-encryption-key-for-config-data

# Default Database Configuration (fallback)
DEFAULT_DB_HOST=localhost
DEFAULT_DB_PORT=3306
DEFAULT_DB_USER=root
DEFAULT_DB_PASSWORD=password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
ALLOWED_IPS=127.0.0.1,10.0.0.0/8,192.168.0.0/16

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Individual Tenant Configuration (Alternative to JSON files)
# Tenant 1
TENANT_TENANT1_SUBDOMAIN=tenant1
TENANT_TENANT1_DB_HOST=localhost
TENANT_TENANT1_DB_PORT=3306
TENANT_TENANT1_DB_NAME=tenant1_db
TENANT_TENANT1_DB_USER=tenant1_user
TENANT_TENANT1_DB_PASSWORD=secure_password_123
TENANT_TENANT1_DB_CONNECTION_LIMIT=10

# Tenant 2
TENANT_TENANT2_SUBDOMAIN=tenant2
TENANT_TENANT2_DB_HOST=db2.example.com
TENANT_TENANT2_DB_PORT=3306
TENANT_TENANT2_DB_NAME=tenant2_production
TENANT_TENANT2_DB_USER=tenant2_admin
TENANT_TENANT2_DB_PASSWORD=another_secure_password_456
TENANT_TENANT2_DB_CONNECTION_LIMIT=20
TENANT_TENANT2_DB_SSL=true

# Redis Configuration (Optional)
TENANT_TENANT1_REDIS_HOST=localhost
TENANT_TENANT1_REDIS_PORT=6379
TENANT_TENANT2_REDIS_HOST=redis.tenant2.com
TENANT_TENANT2_REDIS_PORT=6379
TENANT_TENANT2_REDIS_PASSWORD=redis_password
